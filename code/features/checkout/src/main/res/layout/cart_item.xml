<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cart_item_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"/>

    <RelativeLayout
        android:layout_toRightOf="@+id/cart_item_img"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/cart_item_img"
        android:layout_alignBottom="@+id/cart_item_img"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cart_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Mario Galaxy"/>




    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/cart_item_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_last_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="right"
            android:textSize="10sp"
            android:text="de R$350,00"
            android:textColor="#E4E4E4"/>

        <TextView
            android:id="@+id/card_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="right"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:text="R$250,00"
            android:textColor="#008FFB"/>

    </LinearLayout>




</RelativeLayout>